{
  "version": "0.1.0",
  "license": "MIT",
  "name": "myreact",
  "author": "MrWangJustToDo",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "prepare": "pnpm run build",
    "dev:ssr": "cd ./packages/ssr-example && pnpm run dev",
    "dev": "ts-node ./scripts/rollupWatch.ts",
    "build": "ts-node ./scripts/rollupBuild.ts",
    "lint": "eslint --cache --ext ts,tsx .",
    "lint:fix": "pnpm run lint --fix",
    "prettier": "prettier --ignore-path .prettierignore --write .",
    "clean": "pnpm -p -r -c exec rm -rf dist .cache",
    "purge": "pnpm -p -r -c exec rm -rf node_modules"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm lint"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@babel/runtime": "^7.19.0",
    "@my-react/react": "workspace:*",
    "@my-react/react-dom": "workspace:*",
    "@my-react/react-shared": "workspace:*",
    "@my-react/react-reconciler": "workspace:*",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@swc/core": "^1.3.2",
    "@types/lodash": "^4.14.185",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lodash": "^4.17.21",
    "pm2": "^5.2.0",
    "prettier": "^2.7.1",
    "rollup": "^2.79.0",
    "rollup-plugin-typescript2": "^0.34.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0"
  }
}
