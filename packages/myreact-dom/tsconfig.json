{
  "compilerOptions": {
    "rootDir": "src",
    "target": "ES5",
    "paths": {
      "@my-react-dom-shared": ["./src/shared"],
      "@my-react-dom-server": ["./src/server"],
      "@my-react-dom-server/*": ["./src/server/*"],
      "@my-react-dom-client": ["./src/client"],
      "@my-react-dom-client/*": ["./src/client/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
