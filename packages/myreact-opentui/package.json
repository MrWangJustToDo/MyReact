{
  "name": "@my-react/react-opentui",
  "description": "@my-react/react-opentui",
  "author": "MrWangJustToDo",
  "license": "MIT",
  "version": "0.0.1",
  "main": "index.mjs",
  "types": "./index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "index.mjs",
    "index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MrWangJustToDo/MyReact",
    "directory": "packages/myreact-opentui"
  },
  "exports": {
    ".": {
      "import": "./index.mjs",
      "types": "./index.d.ts"
    },
    "./jsx-runtime": {
      "import": "./jsx-runtime.js",
      "types": "./jsx-runtime.d.ts"
    },
    "./jsx-dev-runtime": {
      "import": "./jsx-dev-runtime.js",
      "types": "./jsx-dev-runtime.d.ts"
    }
  },
  "buildOptions": {
    "input": "./src/index.ts",
    "output": [
      {
        "dir": "./dist",
        "entryFileNames": "esm/index.mjs",
        "format": "esm",
        "type": true
      }
    ]
  },
  "dependencies": {
    "@opentui/core": "latest"
  },
  "devDependencies": {
    "@types/node": "^22.18.10",
    "@types/react-reconciler": "^0.32.0"
  },
  "peerDependencies": {
    "@my-react/react": ">=0.3.21"
  }
}
