{
  "name": "@my-react/react-refresh-tools",
  "version": "0.0.5",
  "description": "An experimental package providing utilities for @my-react Refresh.",
  "files": [
    "dist",
    "loader.js",
    "runtime.js",
    "withNext.js",
    "RefreshWebpackPlugin.js"
  ],
  "license": "MIT",
  "exports": {
    "./loader": "./loader.js",
    "./runtime": "./runtime.js",
    "./withNext": "./withNext.js",
    "./RefreshWebpackPlugin": "./RefreshWebpackPlugin.js",
    "./package.json": "./package.json"
  },
  "buildOptions": [
    {
      "input": "./src/loader.ts",
      "pkgName": "loader",
      "output": [
        {
          "dir": "./dist",
          "entryFileNames": "cjs/loader.js",
          "format": "cjs",
          "multiple": true,
          "sourcemap": true
        },
        {
          "dir": "./dist",
          "entryFileNames": "esm/loader.js",
          "format": "esm",
          "sourcemap": true
        }
      ]
    },
    {
      "input": "./src/runtime.ts",
      "pkgName": "runtime",
      "output": [
        {
          "dir": "./dist",
          "entryFileNames": "cjs/runtime.js",
          "format": "cjs",
          "multiple": true,
          "sourcemap": true
        },
        {
          "dir": "./dist",
          "entryFileNames": "esm/runtime.js",
          "format": "esm",
          "sourcemap": true
        }
      ]
    },
    {
      "input": "./src/webpackPlugin.ts",
      "pkgName": "webpackPlugin",
      "output": [
        {
          "dir": "./dist",
          "entryFileNames": "cjs/webpackPlugin.js",
          "format": "cjs",
          "multiple": true,
          "sourcemap": true
        },
        {
          "dir": "./dist",
          "entryFileNames": "esm/webpackPlugin.js",
          "format": "esm",
          "sourcemap": true
        }
      ]
    }
  ],
  "peerDependenciesMeta": {
    "webpack": {
      "optional": true
    }
  },
  "dependencies": {
    "@my-react/react-refresh": ">=0.2.4"
  },
  "peerDependencies": {
    "webpack": "^4 || ^5"
  }
}
