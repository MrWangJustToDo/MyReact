{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    "baseUrl": ".",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["node", "webpack-env" ],
    "paths": {
      "server/*": ["src/server/*"],
      "client/*": ["src/client/*"],
      "hooks/*": ["src/hooks/*"],
      "router/*": ["src/router/*"],
      "module/*": ["src/module/*"],
      "pages/*": ["src/pages/*"],
      "config/*": ["src/config/*"],
      "style/*": ["src/style/*"],
      "utils/*": ["src/utils/*"],
      "store": ["src/store"],
      "store/*": ["src/store/*"],
      "types/*": ["src/types/*"],
      "theme": ["src/theme"],
      "theme/*": ["src/theme/*"],
      "template/*": ["src/template/*"],
      "components/*": ["src/components/*"],
      "webpackConfig/*": ["webpack/*"],
      "script/*": ["script/*"]
    },
    "incremental": true
  },
  "exclude": ["dist", "dev", "lang", "script", "webpack", "node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
