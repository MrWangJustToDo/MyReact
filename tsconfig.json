{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "pretty": true,
    "types": ["node"],
    "paths": {
      "@my-react-dom-shared": ["./packages/myreact-dom/src/shared"],
      "@my-react-dom-server": ["./packages/myreact-dom/src/server"],
      "@my-react-dom-server/*": ["./packages/myreact-dom/src/server/*"],
      "@my-react-dom-client": ["./packages/myreact-dom/src/client"],
      "@my-react-dom-client/*": ["./packages/myreact-dom/src/client/*"],
      "@build": ["./packages/ui/build"],
      "@build/*": ["./packages/ui/build/*"],
      "@server": ["./packages/ui/src/server"],
      "@server/*": ["./packages/ui/src/server/*"],
      "@client": ["./packages/ui/src/client"],
      "@client/*": ["./packages/ui/src/client/*"],
      "@shared": ["./packages/ui/src/shared"],
      "@shared/*": ["./packages/ui/src/shared/*"]
    }
  }
}
