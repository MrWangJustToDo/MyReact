{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "pretty": true,
    "types": ["node"],
    "paths": {
      "@my-react-dom-shared": ["./packages/myreact-dom/src/shared"],
      "@my-react-dom-server": ["./packages/myreact-dom/src/server"],
      "@my-react-dom-server/*": ["./packages/myreact-dom/src/server/*"],
      "@my-react-dom-client": ["./packages/myreact-dom/src/client"],
      "@my-react-dom-client/*": ["./packages/myreact-dom/src/client/*"],
      "@my-react-dom-noop": ["./packages/myreact-dom/src/noop"],
      "@my-react-dom-noop/*": ["./packages/myreact-dom/src/noop/*"],
      "@build": ["./ui/ssr-example/build"],
      "@build/*": ["./ui/ssr-example/build/*"],
      "@server": ["./ui/ssr-example/src/server"],
      "@server/*": ["./ui/ssr-example/src/server/*"],
      "@client": ["./ui/ssr-example/src/client"],
      "@client/*": ["./ui/ssr-example/src/client/*"],
      "@shared": ["./ui/ssr-example/src/shared"],
      "@shared/*": ["./ui/ssr-example/src/shared/*"],
      "~/*": ["./ui/remix-example/app/*"]
    }
  }
}
